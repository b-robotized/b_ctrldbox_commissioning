<launch>

  <include file="$(find-pkg-share b_robotized_fanuc_demo)/launch/fanuc_description.launch.xml">
    <arg name="mock_hardware" value="true"/>
    <arg name="prefix" value="fanuc_"/>
  </include>

  <let name="controllers_file_path" value="$(find-pkg-share b_robotized_fanuc_demo)/config/scenario_controllers.yaml"/>

  <node pkg="controller_manager" exec="ros2_control_node" name="b_controlled_box_cm" output="both">
    <param from="$(var controllers_file_path)"/>
  </node>

  <node pkg="controller_manager" exec="spawner" name="joint_state_broadcaster_spawner" output="screen" args="joint_state_broadcaster -c /b_controlled_box_cm"/>
  <node pkg="controller_manager" exec="spawner" name="fanuc_joint_trajectory_controller_spawner" output="screen" args="fanuc_joint_trajectory_controller -c /b_controlled_box_cm"/>
  <node pkg="controller_manager" exec="spawner" name="fanuc_gpio_controller_spawner" output="screen" args="fanuc_gpio_controller -c /b_controlled_box_cm"/>

</launch>
