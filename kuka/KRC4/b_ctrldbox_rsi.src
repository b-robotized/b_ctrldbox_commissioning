; Declare KRL Variables
DECL INT ret;
DECL INT CONTID;

;FOLD INI
  ;FOLD BASISTECH INI
    GLOBAL INTERRUPT DECL 3 WHEN $STOPMESS==TRUE DO IR_STOPM ( )
    INTERRUPT ON 3
    BAS (#INITMOV,0 )
  ;ENDFOLD (BASISTECH INI)
  ;FOLD USER INI
    ;Make your modifications here

  ;ENDFOLD (USER INI)
;ENDFOLD (INI)


; Move to start position
PTP {A1 0, A2 -90, A3 90, A4 0, A5 0, A6 0}

; Create RSI Context
ret = RSI_CREATE("b_ctrldbox.rsi", CONTID, TRUE)
IF (ret <> RSIOK) THEN
   HALT
ENDIF

; Start RSI
ret = RSI_ON(#ABSOLUTE)
if (ret <> RSIOK) THEN
   HALT
ENDIF

; Run RSI Correction
RSI_MOVECORR()

; Turn off RSI
ret = RSI_OFF()
if (ret <> RSIOK) THEN
   HALT
ENDIF


; Return to start position
PTP {A1 0, A2 -90, A3 90, A4 0, A5 0, A6 0}

END